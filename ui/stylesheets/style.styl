
@import 'nib'

global-reset()

html
	width 100%
	height 100%

body
	display -webkit-box
	-webkit-box-orient vertical
	display -moz-box
	-moz-box-orient vertical
	display box
	box-orient vertical
	height 100% 
	width 100%

nav, footer
	font 14pt 'Ubuntu'
	height 45px
	width 100%
	margin 0

nav
	box-shadow -1px 1px 1px rgba(#fff, 0.35) inset, -1px -1px 1px rgba(#fff, 0.35) inset, -1px 1px 2px rgba(#000, 0.5)
	background-image linear-gradient(top, #0e8bce 20%, #025986);
	text-shadow #000 1px 1px 1px
	border 1px solid #444
	border-width 1px 0
	color white
	line-height 40px
	& div
		margin-left 15px

		

section.main
	width 100%
	min-height 400px
	display -webkit-box
	-webkit-box-orient horizontal
	-webkit-box-flex 1
	display -moz-box
	-moz-box-orient horizontal
	-moz-box-flex 1
	margin 0

article
	padding 0
	margin 0
	&.west
		width 270px
		border-right 1px solid #ccc
		background #F0F5F7
	&.center
		-webkit-box-flex 1
		-moz-box-flex 1
	h1
		background linear-gradient(top, #fdfdfd, #f0f0f0 50%, #e3e3e3 50%, #e9e9e9 50%, #eee)
		font 10pt 'Ubuntu'
		border-bottom 1px solid #bbb
		height 30px
		line-height 28px
		padding-left 10px
	div.search
		background linear-gradient(top, #fdfdfd, #f0f0f0 50%, #e3e3e3 50%, #e9e9e9 50%, #eee)
		padding 7px 0px
		text-align center
		border-bottom 1px solid #bbb
		input
			box-shadow(1px 1px 4px #ccc inset)
			margin 0
			border 1px solid #aaa
			border-radius(12px)
			width 86%
			padding 5px 8px
			&:focus
				outline: none 
				border-color #0e8bce
